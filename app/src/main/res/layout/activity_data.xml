<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292D36"
    android:orientation="vertical"
    tools:context=".Data">

        <LinearLayout
            android:id="@+id/linearback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icback"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="back"
                android:letterSpacing="0.3"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="14dp"
                android:textAllCaps="true"/>
        </LinearLayout>

        <TextView
            android:id="@+id/payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAYMENT METHOD"
            android:textAllCaps="true"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="#EE6A1F"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lengkapi Data Anda"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppinslight"
            android:textColor="#FFFFFF"
            android:textSize="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="50dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:hint="Nama"
            android:paddingTop="5dp"
            android:textColorHint="#FFFFFF">

            <EditText
                android:id="@+id/namatxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:inputType="textPersonName"
                android:paddingRight="5dp"
                android:fontFamily="@font/poppinsextralight"
                android:textColor="#FFFFFF"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:hint="No Meja"
            android:paddingTop="5dp"
            android:textColorHint="#FFFFFF">

            <EditText
                android:id="@+id/nomeja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:inputType="number"
                android:paddingRight="5dp"
                android:fontFamily="@font/poppinsextralight"
                android:textColor="#FFFFFF"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:hint="Alamat"
            android:paddingTop="5dp"
            android:textColorHint="#FFFFFF">

            <EditText
                android:id="@+id/alamattxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="12dp"
                android:paddingRight="5dp"
                android:fontFamily="@font/poppinsextralight"
                android:textColor="#FFFFFF"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:hint="No Telepon"
            android:paddingTop="5dp"
            android:textColorHint="#FFFFFF">

            <EditText
                android:id="@+id/notxt"
                android:layout_width="match_parent"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:paddingRight="5dp"
                android:fontFamily="@font/poppinsextralight"
                android:textColor="#FFFFFF"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputpembayaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:hint="No pembayaran"
            android:paddingTop="5dp"
            android:textColorHint="#FFFFFF">

            <EditText
                android:id="@+id/pembayarantxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:inputType="number"
                android:paddingRight="5dp"
                android:fontFamily="@font/poppinsextralight"
                android:textColor="#FFFFFF"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:hint="Masukkan Nominal Uang Anda"
            android:paddingTop="5dp"
            android:textColorHint="#FFFFFF">

            <EditText
                android:id="@+id/nominaltxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="12dp"
                android:paddingRight="5dp"
                android:fontFamily="@font/poppinsextralight"
                android:textColor="#FFFFFF"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/totalharga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RP."
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="#EE6A1F"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/bayar"
            android:layout_width="304dp"
            android:layout_height="45dp"
            android:text="BAYAR"
            android:layout_marginBottom="30dp"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="true"
            android:fontFamily="@font/poppinssemibold"
            android:background="#EE6A1F"/>
    </LinearLayout>

</LinearLayout>