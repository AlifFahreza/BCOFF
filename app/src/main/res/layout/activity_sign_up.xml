<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292D36"
    tools:context=".SignUp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/bg2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/bg1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icback"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="back"
                android:letterSpacing="0.3"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="14dp"
                android:textAllCaps="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="90dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Letâ€™s get
                    Started!"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppinssemibold"
                    android:textSize="36dp"
                    android:shadowColor="#1C1C1C"
                    android:shadowRadius="2"
                    android:shadowDx="5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create an account to start using BCOFF."
                    android:layout_marginTop="-10dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppinsextralight"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="70dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:hint="Username"
                    android:paddingTop="5dp"
                    android:background="@drawable/rounded_corner3"
                    android:textColorHint="#FFFFFF">

                    <EditText
                        android:id="@+id/usernametxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:inputType="textPersonName"
                        android:paddingRight="5dp"
                        android:fontFamily="@font/poppinsextralight"
                        android:textColor="#FFFFFF"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:hint="Email"
                    android:paddingTop="5dp"
                    android:background="@drawable/rounded_corner3"
                    android:textColorHint="#FFFFFF">

                    <EditText
                        android:id="@+id/emailtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/poppinsextralight"
                        android:textColor="#FFFFFF"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:hint="Password"
                    android:paddingTop="5dp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#EE6A1F"
                    android:background="@drawable/rounded_corner3"
                    android:textColorHint="#FFFFFF">

                    <EditText
                        android:id="@+id/passwordtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:inputType="textPassword"
                        android:fontFamily="@font/poppinsextralight"
                        android:textColor="#FFFFFF"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:hint="Confirm Password"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="#EE6A1F"
                    android:paddingTop="5dp"
                    android:background="@drawable/rounded_corner3"
                    android:textColorHint="#FFFFFF">

                    <EditText
                        android:id="@+id/confirmpasswordtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:inputType="textPassword"
                        android:fontFamily="@font/poppinsextralight"
                        android:textColor="#FFFFFF"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="304dp"
                    android:layout_height="45dp"
                    android:text="Create account"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppinssemibold"
                    android:background="@drawable/rounded_corner"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearkoneksi"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="#FF0000">

        <TextView
            android:id="@+id/texterror"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Internet Connection!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</RelativeLayout>