<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292D36"
    tools:context=".Intro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BCOFF"
                android:letterSpacing="0.3"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="48dp"
                android:shadowColor="#1C1C1C"
                android:shadowRadius="2"
                android:shadowDx="5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:shadowColor="#1C1C1C"
                android:shadowRadius="2"
                android:shadowDx="5"
                android:layout_marginLeft="7dp"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="#EE6A1F"
                android:textSize="72dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginTop="-35dp"
            android:fontFamily="@font/poppinsextralight"
            android:textSize="18dp"
            android:text="Itâ€™s Great Day For Coffee"/>

        <ImageView
            android:layout_width="423dp"
            android:layout_height="317dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/productpreview"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/login"
                android:layout_width="304dp"
                android:layout_height="45dp"
                android:text="Go To Login"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinssemibold"
                android:background="@drawable/rounded_corner"/>

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="304dp"
                android:layout_height="45dp"
                android:layout_marginTop="13dp"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:fontFamily="@font/poppinssemibold"
                android:background="@drawable/roundedcorner2"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearkoneksi"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:gravity="center"
        android:background="#FF0000">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tidak ada koneksi internet, Periksa Jaringan Anda!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

</RelativeLayout>