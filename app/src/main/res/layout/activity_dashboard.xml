<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292D36"
    tools:context=".Dashboard">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, "
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/usernameteks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AlifFahreza"
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center|right"
                android:layout_weight="5">

                <ImageView
                    android:id="@+id/keranjang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/shoppingbag"/>

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/user"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:fontFamily="@font/poppinslight"
                android:textColor="#FFFFFF"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Coffee"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="."
                    android:textColor="#EE6A1F"
                    android:textSize="18dp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="360dp"
                app:cardElevation="7dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="20dp"
                android:outlineAmbientShadowColor="#000"
                android:outlineSpotShadowColor="#000"
                app:cardBackgroundColor="#EE6A1F"
                android:layout_height="202dp">

                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/carouselView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:fillColor="#292D36"
                    app:pageColor="#00000000"
                    app:radius="3dp"
                    android:layout_margin="2dp"
                    app:slideInterval="3000"
                    app:strokeColor="#FFFFFF"
                    app:strokeWidth="0.5dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Menu"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppinslight"
                android:textColor="#FFFFFF"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/menu1"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="25dp"
                    app:cardBackgroundColor="#666A73">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:src="@drawable/menu1"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/menu2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="25dp"
                    app:cardBackgroundColor="#666A73">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/menu2"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/menu3"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="20dp"
                    app:cardBackgroundColor="#666A73">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:src="@drawable/menu3"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/menu4"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="25dp"
                    app:cardBackgroundColor="#666A73">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:src="@drawable/menu4"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/menu5"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#666A73">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:src="@drawable/menu5"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merchandise"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppinslight"
                android:textColor="#FFFFFF"
                android:textSize="18dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/merchandise"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>